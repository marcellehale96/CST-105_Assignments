package piglatinoutputcapital;

import java.util.Scanner;
import java.io.File;
import java.io.FileNotFoundException;

//For this project I used the text example given in the assignment

public class PigLatinOutputCapital {
    public static void main(String[] args) throws FileNotFoundException {
        
        //Create file and input name of file
        File file = new File("");
        //Create a scanner
        Scanner input = new Scanner(file);
        
        //Create strings for each word
        String s1 = input.next();
        String s2 = input.next();
        String s3 = input.next();
        String s4 = input.next();
        String s5 = input.next();
        String s6 = input.next();
        String s7 = input.next();
        
        //Create substrings to convert word to piglatin
        String s8 = s1.substring(0) + "way";
        String s9 = s2.substring(1,3) + "way";
        String s10 = s3.substring(0) + "way";
        String s11 = s4.substring(1,4) + s4.substring(0,1) + "ay";
        String s12 = s5.substring(0) + "way";
        String s13 = s6.substring(2, 6) + s6.substring(0,2) + "ay";
        String s14 = s7.substring(1,5) + s7.substring(0,1) + "ay";
        
        
        System.out.println(s1.toUpperCase() + " " + s8.toUpperCase());
        System.out.println(s2.toUpperCase() + " " + s9.toUpperCase());
        System.out.println(s3.toUpperCase() + " " + s10.toUpperCase());
        System.out.println(s4.toUpperCase() + " " + s11.toUpperCase());
        System.out.println(s5.toUpperCase() + " " + s12.toUpperCase());
        System.out.println(s6.toUpperCase() + " " + s13.toUpperCase());
        System.out.println(s7.toUpperCase() + " " + s14.toUpperCase());
        
        
        
       
        
        
        
        
        
        
        
        
        
    }
    
}
