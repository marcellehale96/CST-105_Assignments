package readingtext;

import java.util.Scanner;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.PrintStream;

        
        
        
public class ReadingText {

static void main(String args[]) throws FileNotFoundException {
    
    //Each word of text should be a line for code to work
    //Used to declare what file will be inputed
    File text = new File("");
    
    //Scanner used to read file in Java
    Scanner rt = new Scanner(text);
    
    
    //Scanner will read each line of text
    int lineNumber = 1;
    while(rt.hasNextLine()){
        String line = rt.nextLine();
        String toUpperCase;
        toUpperCase = line.toUpperCase();
        PrintStream printf;
        printf = System.out.printf("%10s%15s%15s%15s%20s", line.toUpperCase());
        
        
        
    }
    
    
                
        
    }
        
        
        
        
            
    
    
    
       
    
    }
    

